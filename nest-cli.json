{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "monorepo": true,
  "root": "apps",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src"
    },
    "auth": {
      "type": "application",
      "root": "apps/microservicios/auth",
      "entryFile": "main",
      "sourceRoot": "apps/microservicios/auth/src"
    },
    "productos": {
      "type": "application",
      "root": "apps/microservicios/productos",
      "entryFile": "main",
      "sourceRoot": "apps/microservicios/productos/src"
    },
    "puestos": {
      "type": "application",
      "root": "apps/microservicios/puestos",
      "entryFile": "main",
      "sourceRoot": "apps/microservicios/puestos/src"
    },
    "pedidos": {
      "type": "application",
      "root": "apps/microservicios/pedidos",
      "entryFile": "main",
      "sourceRoot": "apps/microservicios/pedidos/src"
    }
  }
}
