{
  "name": "reyes-guilarte-flores-tep-sistema-ferias-gastronomicas",
  "version": "1.0.0",
  "description": "Sistema distribuido para ferias gastronómicas",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start:dev:auth": "cd apps/microservicios/auth && nest start --watch",
    "start:dev:productos": "cd apps/microservicios/productos && nest start --watch",
    "start:dev:puestos": "cd apps/microservicios/puestos && nest start --watch",
    "start:dev:pedidos": "cd apps/microservicios/pedidos && nest start --watch",
    "start:dev:gateway": "cd apps/api-gateway && nest start --watch",
    "start:dev:all": "concurrently --names \"AUTH,PROD,PUES,PEDI,GATE\" \"npm run start:dev:auth\" \"npm run start:dev:productos\" \"npm run start:dev:puestos\" \"npm run start:dev:pedidos\" \"npm run start:dev:gateway\"",
    "start:dev:essential": "concurrently --names \"AUTH,GATEWAY\" \"npm run start:dev:auth\" \"npm run start:dev:gateway\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "start": "echo '⚠️  Para desarrollo ejecuta: npm run start:dev:all'",
    "start:prod:auth": "node dist/apps/microservicios/auth/src/main.js",
    "start:prod:productos": "node dist/apps/microservicios/productos/src/main.js",
    "start:prod:puestos": "node dist/apps/microservicios/puestos/src/main.js",
    "start:prod:pedidos": "node dist/apps/microservicios/pedidos/src/main.js",
    "start:prod:gateway": "node dist/apps/api-gateway/src/main.js",
    "test": "echo 'No tests configured'",
    "clean": "rm -rf dist node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.11",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.1.11",
    "@nestjs/platform-express": "^11.1.11",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.0",
    "@types/bcrypt": "^5.0.1",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0"
  }
}
